<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.vidyo.vidyoconnector.VideoFrameLayout
            android:id="@+id/videoFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/location_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/controlsLayout"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:alpha="0.9"
                    android:background="@drawable/rounded_border_edittext"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingBottom="0dp"
                        android:src="@drawable/vidyo_io_vertical_dark_at_2x" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_material_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:width="110dp"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingEnd="5dp"
                            android:text="Host"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/hostTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:elegantTextHeight="true"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="prod.vidyo.io"
                            android:inputType="text"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_material_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:width="110dp"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingEnd="5dp"
                            android:text="Token"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/tokenTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:elegantTextHeight="true"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="required"
                            android:inputType="text"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_material_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:width="110dp"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingEnd="5dp"
                            android:text="Display Name"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/displayNameTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:elegantTextHeight="true"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="your name"
                            android:inputType="text"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_material_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:width="110dp"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingEnd="5dp"
                            android:text="Resource ID"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/resourceIdTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:elegantTextHeight="true"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="required"
                            android:inputType="text"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_material_light" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/connectionSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/clientVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingEnd="2dp"
                            android:paddingStart="2dp"
                            android:text="VidyoClient-AndroidSDK 0.0.0.0"
                            android:textColor="#ff0000"
                            android:textSize="10sp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleConnectButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.9"
                    android:background="@drawable/toggle_connect"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="toggleConnectButtonPressed"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/cameraSwitch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.9"
                    android:background="@drawable/camera_switch"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="cameraSwapButtonPressed"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/cameraPrivacyButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.9"
                    android:background="@drawable/toggle_camera_privacy"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="cameraPrivacyButtonPressed"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/microphonePrivacyButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.9"
                    android:background="@drawable/toggle_mic_privacy"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="microphonePrivacyButtonPressed"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toolbarStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbarStatusFiller"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom" />

                <TextView
                    android:id="@+id/toolbarStatusText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal|bottom"
                    android:maxLines="1"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:shadowColor="#0d0d0d"
                    android:shadowDx="-3.0"
                    android:shadowDy="-3.0"
                    android:shadowRadius="2.0"
                    android:text="Ready to Connect"
                    android:textColor="#f1f1f1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/toggleDebug"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="false"
                        android:layout_marginEnd="3dp"
                        android:alpha="0.7"
                        android:background="@drawable/gear"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:onClick="toggleDebugButtonPressed"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>



